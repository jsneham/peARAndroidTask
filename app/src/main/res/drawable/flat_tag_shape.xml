<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:width="350dp" android:height="50dp" >
        <shape>
<!--            <size android:width="300dp" android:height="40dp"/>-->
            <solid android:color="@color/green_light"/>

        </shape>
    </item>

    <!--    dotted line-->
    <item  android:top="3dp" android:bottom="3dp" android:width="350dp" android:height="45dp" >
        <shape>
            <!--            <size android:width="300dp" android:height="40dp"/>-->
            <solid android:color="@color/green_light"/>
            <stroke
                android:width="1dp"
                android:dashWidth="10px"
                android:dashGap="5px"
                android:color="#fff"/>
        </shape>
    </item>


    <item android:width="35dp" android:height="35dp"
        android:left="350dp">
        <rotate android:fromDegrees="45"
            android:pivotX="0"
            android:pivotY="0">
            <shape>
                <solid android:color="@android:color/white"/>
                <stroke
                    android:width="1dp"
                    android:dashWidth="10px"
                    android:dashGap="5px"
                    android:color="#fff"/>
            </shape>
        </rotate>
    </item>




    <item android:width="35dp" android:height="35dp"
        android:right="300dp">
        <rotate android:fromDegrees="45"
            android:pivotX="0"
            android:pivotY="0">
            <shape>
                <solid android:color="@android:color/white"/>
                <stroke
                    android:width="1dp"
                    android:dashWidth="10px"
                    android:dashGap="5px"
                    android:color="#fff"/>
            </shape>
        </rotate>
    </item>





</layer-list>